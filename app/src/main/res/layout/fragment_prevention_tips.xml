    <ImageView
        android:id="@+id/ic_tip_4_check"
        android:layout_width="@dimen/icon_tips_checkeds_size"
        android:layout_height="@dimen/icon_tips_checkeds_size"
        android:src="@drawable/ic_check"
        app:layout_constraintTop_toTopOf="@id/ic_tip_4_right"
